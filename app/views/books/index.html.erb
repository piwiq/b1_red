<div class="success"><%= flash[:notice] %></div>

<head>
<%= stylesheet_link_tag 'application', :media => "all" %>
</head>

<h1 class="headline">Books</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td><%= link_to 'Show', book_path(book.id) %></td>
      <td><%= link_to 'Edit', edit_book_path(book.id) %></td>
      <td><%= link_to 'Destroy', destroy_book_path(book.id), method: :delete, "data-confirm" => "Are you sure?"%></td>
    </tr>
    <% end %>
  </tbody>
</table>


<h2 class="header">New Book</h2>


<% if @book.errors.any? %>
<div class="error">
<div class="what_happened">
 <%= pluralize(@book.errors.count, "error") %>  prohibited this book from being saved:
</div>
 <ul class="why">
   <% @book.errors.full_messages.each do |message| %>
     <li><%= message %></li>
   <% end %>
 </ul>
 </div>
<% end %>
</div>

<%= form_with model: @book do |f| %>
<div class="book_body">
  <label>Title</label>
  <div><%= f.text_field :title %></div>
</div>

<div class="book_body">
  <label>Body</label>
  <div><%= f.text_area :body %></div>
</div>

<div class="action">
  <%= f.submit 'Create Book' %>
</div>

<% end %>
</div>