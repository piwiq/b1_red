<h1>Books</h1>
<% @books.each do |book| %>
  <th>Title</th>
  <tr><%= book.title %></tr>
  <th>Body</th>
  <tr><%= book.body %></tr>

<% end %>

<span>
  <%= link_to 'show', "/books/#{book.id}" %>
</span>


<h2>New Book</h2>
<%= form_with model: Book.new do |f| %>
  <label>Title</label>
  <%= f.text_field :title %>

  <label>Body</label>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>
<% end %>