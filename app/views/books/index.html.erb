<h1>Books</h1>
<% @books.each do |book| %>
  <th>Title</th>
  <tr><%= book.title %></tr>
  <th>Body</th>
  <tr><%= book.body %></tr>

  <span>
  <%= link_to 'show', book_path(book.id) %>
  </span>

  <span>
  <%= link_to 'Edit', edit_book_path(book.id) %>
  </span>

  <span>
    <%= link_to 'Destroy', destroy_book_path(book.id), method: :delete, "data-confirm" => "Are you sure?"%>
  </span>



<% end %>

<h2>New Book</h2>
<%= form_with model: Book.new do |f| %>
  <label>Title</label>
  <%= f.text_field :title %>

  <label>Body</label>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>
<% end %>