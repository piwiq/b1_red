<head>
<%= stylesheet_link_tag 'application', :media => "all" %>
</head>

<body>
<h1 class="headline">Editing Book</h1>

<% if @book.errors.any? %>
<div class="error">
<div class="what_happened">
 <%= pluralize(@book.errors.count, "error") %>  prohibited this book from being saved:
</div>
 <ul class="why">
   <% @book.errors.full_messages.each do |message| %>
     <li><%= message %></li>
   <% end %>
 </ul>
 </div>
<% end %>


<%=form_with model: @book,url:update_book_path(@book.id), method: :patch do |f| %>

<div class="book_body">
<label>Title</label>
<div><%= f.text_field :title %></div>
</div>

<div class="book_body">
<label>Body</label>
<div><%= f.text_area :body %></div>
</div>

<div class="action">
<%= f.submit 'Update Book' %>
</div>

<div class="link">
<%= link_to 'Show', book_path(@book.id) %>
<span>|</span>
<%= link_to 'Back', index_path %>
</div>

<% end %>
</body>